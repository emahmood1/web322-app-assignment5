            <!-- Updated session-based navigation -->
            <ul class="nav navbar-nav ms-auto">
                {{#if session.user}}
                 <div class="dropdown">
        <a href="/userHistory" class="btn btn-primary dropdown-toggle" type="button" id="userMenu" data-toggle="dropdown">
